<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background"
    android:padding="24dp"
    tools:context=".FilterActivity">


    <TextView
        android:id="@+id/tvFilterTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Filter your search"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnCloseFilter" />

    <ImageButton
        android:id="@+id/btnCloseFilter"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_chevron_circle_custom"
        android:contentDescription="Close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvOffersLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="OFFERS"
        android:textColor="#32343E"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvFilterTitle" />

    <HorizontalScrollView
        android:id="@+id/offersScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/tvOffersLabel">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDelivery"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Delivery"
                android:textColor="@android:color/black"
                app:cornerRadius="20dp"
                app:strokeColor="@android:color/darker_gray"
                app:strokeWidth="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPickUp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Pick Up"
                android:textColor="@android:color/black"
                app:cornerRadius="20dp"
                app:strokeColor="@android:color/darker_gray"
                app:strokeWidth="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnOffer"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Offer"
                android:textColor="@android:color/black"
                app:cornerRadius="20dp"
                app:strokeColor="@android:color/darker_gray"
                app:strokeWidth="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnOnlinePayment"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Online Payment"
                android:textColor="@android:color/black"
                app:cornerRadius="20dp"
                app:strokeColor="@android:color/darker_gray"
                app:strokeWidth="1dp" />
        </LinearLayout>
    </HorizontalScrollView>


    <TextView
        android:id="@+id/tvDeliverTimeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="DELIVERY TIME"
        android:textColor="#32343E"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/offersScrollView"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/deliveryTimeChips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvDeliverTimeLabel">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn10min"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="10-15 min"
            android:textColor="@android:color/white"
            android:backgroundTint="#DCE8FF"
            app:cornerRadius="20dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn20min"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="20 min"
            android:textColor="@android:color/black"
            app:cornerRadius="20dp"
            app:strokeColor="@android:color/darker_gray"
            app:strokeWidth="1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn30min"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="30 min"
            android:textColor="@android:color/black"
            app:cornerRadius="20dp"
            app:strokeColor="@android:color/darker_gray"
            app:strokeWidth="1dp" />
    </LinearLayout>


    <TextView
        android:id="@+id/tvPricingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="PRICING"
        android:textColor="#32343E"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/deliveryTimeChips"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/pricingChips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvPricingLabel">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPricing1"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="$"
            android:textColor="@android:color/black"
            app:cornerRadius="20dp"
            app:strokeColor="@android:color/darker_gray"
            app:strokeWidth="1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPricing2"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="$$"
            android:textColor="@android:color/white"
            android:backgroundTint="#DCE8FF"
            app:cornerRadius="20dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPricing3"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="$$$"
            android:textColor="@android:color/black"
            app:cornerRadius="20dp"
            app:strokeColor="@android:color/darker_gray"
            app:strokeWidth="1dp" />
    </LinearLayout>


    <TextView
        android:id="@+id/tvRatingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="RATING"
        android:textColor="#32343E"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/pricingChips"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/ratingStars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvRatingLabel"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/star1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_star_unfilled"
            android:contentDescription="Star 1" />

        <ImageView
            android:id="@+id/star2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_star_unfilled"
            android:contentDescription="Star 2" />

        <ImageView
            android:id="@+id/star3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_star_unfilled"
            android:contentDescription="Star 3" />

        <ImageView
            android:id="@+id/star4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_star_unfilled"
            android:contentDescription="Star 4" />

        <ImageView
            android:id="@+id/star5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_star_unfilled"
            android:contentDescription="Star 5" />
    </LinearLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Done"
        android:textColor="@android:color/white"
        android:backgroundTint="#DCE8FF"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:cornerRadius="30dp"
        app:layout_constraintTop_toBottomOf="@id/ratingStars"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
