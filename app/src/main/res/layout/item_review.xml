<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingVertical="12dp"
    android:paddingHorizontal="16dp"
    android:layout_marginBottom="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivReviewerProfile"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_person"
        app:civ_border_color="@color/dashboard_background"
        app:civ_border_width="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvReviewerName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/ivReviewerProfile"
        app:layout_constraintTop_toTopOf="@id/ivReviewerProfile"
        app:layout_constraintEnd_toStartOf="@id/tvReviewDate"
        tools:text="John Doe" />

    <TextView
        android:id="@+id/tvReviewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_light_gray"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@id/btnReviewMore"
        app:layout_constraintTop_toTopOf="@id/tvReviewerName"
        app:layout_constraintBottom_toBottomOf="@id/tvReviewerName"
        tools:text="20/12/2020" />

    <ImageButton
        android:id="@+id/btnReviewMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more_vert"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="More options"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvReviewerName"
        app:layout_constraintBottom_toBottomOf="@id/tvReviewerName" />

    <TextView
        android:id="@+id/tvReviewComment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="12dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/ivReviewerProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvReviewerName"
        tools:text="Great Food and Service" />

    <LinearLayout
        android:id="@+id/llStars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@id/ivReviewerProfile"
        app:layout_constraintTop_toBottomOf="@id/tvReviewComment">
        <ImageView android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/ic_star" android:tint="@color/yellow_star" android:contentDescription="Star" />
        <ImageView android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/ic_star" android:tint="@color/yellow_star" android:contentDescription="Star" />
        <ImageView android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/ic_star" android:tint="@color/yellow_star" android:contentDescription="Star" />
        <ImageView android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/ic_star" android:tint="@color/yellow_star" android:contentDescription="Star" />
        <ImageView android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/ic_star" android:tint="@color/yellow_star" android:contentDescription="Star" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>